<JoinServerScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            orientation: "vertical"
            size_hint: (None, None)
            pos_hint: { 'center_x' : 0.5 }
            width: 400
            spacing: 10
            Label:
                text: "Type your nickname"
                height: 25
                size_hint: (1, None)
            BoxLayout:
                orientation: "vertical"
                size_hint: (1, None)
                height: 100
                spacing: 10
                TextInput:
                    id: nickInput
                    multiline: False
                    font_size: '20dp'
                    height: 40
                    size_hint: (1, None)
                Label:
                    id: errorLabel
                    text: ""
                    height: 25
                    size_hint: (1, None)
                    color: 1, 0, 0, 1
            Button:
                text: "Connect with game room"
                size_hint: (1, None)
                height: 40
                on_press: root.joinServer(nickInput.text)

<GameRoomScreen>:
    chatController: chatContainer
    gameRoomController: gameRoomContainer
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: (1, None)
            height: 30
            orientation: "horizontal"
            Label:
                id: loggedUserHeader
                text: "Logged out"
            Button:
                size_hint: (None, 1)
                width: 100
                text: "Log out"
                color: 1, 1, 1, 1
                background_color: [0.8, 0, 0, 1]
                on_press: root.logOut()
        BoxLayout:
            orientation: "horizontal"
            GameRoomController:
                id: gameRoomContainer
            ChatController:
                id: chatContainer
                msgType: "SERVER"

<ChatMessage>:
    markup: True
    size_hint: (1, None)
    padding_y: 3
    padding_x: 5
    color: 0, 0, 0, 1
    text_size: self.width, None
    height: self.texture_size[1]
    canvas.before:
        Color:
            rgb: 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

<ChatController>:
    msgList: msgList
    orientation: "vertical"
    size_hint: (.4, 1)
    ScrollView:
        size_hint: (1, 0.7)
        scroll_y: 0
        canvas.before:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            id: msgList
            cols: 1
            size_hint_y: None
            padding_vertical: 30
            height: self.minimum_height
    TextInput:
        id: chatMsg
        multiline: True
        font_size: '20dp'
        size_hint: (1, 0.3)
    Button:
        text: "Send"
        size_hint: (1, None)
        height: 40
        on_press: root.sendChatMsg(root.msgType, chatMsg.text)

<GameRoomController>:
    roomsArea: roomsArea
    orientation: "vertical"
    size_hint: (.6, 1)
    ScrollView:
        scroll_y: 0
        size_hint: (1, 0.7)
        canvas.before:
            Color:
                rgb: 1, 0.7, 0.7
            Rectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            id: roomsArea
            cols: 1
            size_hint_y: None
            padding_vertical: 30
            height: self.minimum_height
    GridLayout:
        size_hint: (1, None)
        height: 40
        cols: 2
        rows: 1
        Button:
            text: "Create a room"
            on_press: root.openCreateRoomPopup()
        Button:
            text: "Refresh rooms"
            on_press: root.refreshRooms()

<CreateRoomPopupLabel@Label>:
    pos_hint: {'center_x': .5, 'y': 0.2}

<CreateRoomPopupInput@TextInput>:
    size_hint: (0.8, None)
    pos_hint: {'center_x': .5, 'y': 0.3}
    height: 40
    multiline: False

<CreateRoomPopup>:
    title: "Create new room"
    size_hint: (0.8, 0.8)
    errorLabel: errorLabel
    BoxLayout:
        orientation: "vertical"
        GridLayout:
            cols: 2
            rows: 3
            RelativeLayout:
                CreateRoomPopupLabel:
                    text: "Nazwa"
                CreateRoomPopupInput:
                    id: roomName
            RelativeLayout:
                Label:
                    text: "Liczba graczy"
                    pos_hint: {'center_x': .5, 'y': 0.2}
                Spinner:
                    id: playersNumber
                    text: "2"
                    values: ("2", "3", "4", "5", "6")
                    pos_hint: {'center_x': .5, 'y': 0.3}
                    size_hint: (0.8, None)
                    height: 40
            RelativeLayout:
                Label:
                    text: "Gra prywatna"
                    pos_hint: {'center_x': .5, 'y': 0.2}
                CheckBox:
                    id: privateGame
                    pos_hint: {'center_x': .5, 'y': 0.3}
                    size_hint: (0.8, None)
                    on_active: root.setPasswordActive(self, roomPassword)
                    height: 40
            RelativeLayout:
                Label:
                    text: "Has≈Ço"
                    pos_hint: {'center_x': .5, 'y': 0.2}
                CreateRoomPopupInput:
                    id: roomPassword
                    disabled: True
        Label:
            id: errorLabel
            height: 40
            size_hint: (1, None)
            text: ""
            color: 1, 0, 0, 1
        BoxLayout:
            orientation: "horizontal"
            height: 40
            size_hint: (1, None)
            Button:
                size_hint: (1, None)
                height: 40
                text: "Submit"
                on_press: root.createRoomRequest(roomName.text, playersNumber.text, privateGame.active, roomPassword.text)
            Button:
                size_hint: (1, None)
                height: 40
                text: "Cancel"
                on_press: root.dismiss()

<RoomListElement>:
    roomNumber: roomNumber
    roomName: roomName
    playersNumber: playersNumber
    roomPlayers: roomPlayers
    orientation: "horizontal"
    padding_y: 3
    padding_x: 5
    canvas.before:
        Color:
            rgb: self.color, self.color, self.color
        Rectangle:
            pos: self.pos
            size: self.size
    size_hint: (1, None)
    height: 40
    Label:
        id: roomNumber
        text: ""
        pos: (0, 0)
        size_hint: (None, 1)
        width: 70
        color: 0, 0, 0, 1
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "horizontal"
            size_hint: (1, 0.4)
            Label:
                size_hint: (None, 1)
                id: roomName
                text: "room"
                color: 0, 0, 0, 1
            Label:
                size_hint: (None, 1)
                text: " l. graczy: "
                color: 0, 0, 0, 1
            Label:
                size_hint: (None, 1)
                id: playersNumber
                text: "5"
                color: 0, 0, 0, 1
        BoxLayout:
            orientation: "horizontal"
            size_hint: (1, 0.4)
            Label:
                size_hint: (None, 1)
                id: roomPlayers
                markup: True
                text: "gracze"
                color: 0, 0, 0, 1
    Button:
        size_hint: (None, 0.8)
        width: 100
        text: "Join"
        on_press: root.joinRoom()

<CornerBox@FloatLayout>:
    size_hint: (.1538, .1538)
    canvas.before:
        Color:
            rgb: 0.2, 0.2, 0.2
        Rectangle:
            pos: self.pos
            size: self.size

<SingleRoomGameWidget>:
    anchor_x: 'center'
    anchor_y: 'center'
    minimum_height: 650
    minimum_width: 650
    startMsgLabel: startMsgLabel
    initialView: initialView
    BoxLayout:
        id: initialView
        orientation: "vertical"
        size_hint: (None, None)
        pos_hint: { 'center_x' : 0.5 }
        width: 400
        spacing: 10
        Button:
            size_hint: (1, None)
            height: 30
            text: "Start"
            on_press: root.startGame()
        Label:
            id: startMsgLabel
            text: ""
            height: 25
            size_hint: (1, None)
            color: 1, 0, 0, 1

<GameBoard>:
    size_hint: (None, None)
    size: (650, 650)
    startBox: startBox
    jailBox: jailBox
    goToJailBox: goToJailBox
    parkingBox: parkingBox
    northPart: northPart
    southPart: southPart
    westPart: westPart
    eastPart: eastPart
    CornerBox:
        id: startBox
        pos_hint: {'x': .0, 'y': .0}
    CornerBox:
        id: jailBox
        pos_hint: {'x': .0, 'y': .8462}
    CornerBox:
        id: goToJailBox
        pos_hint: {'x': .8462, 'y': .8462}
    CornerBox:
        id: parkingBox
        pos_hint: {'x': .8462, 'y': .0}
    BoxLayout:
        id: northPart
        orientation: "horizontal"
        size_hint: (.6923, .1538)
        pos_hint: {'x': .1538, 'y': .8462}
        canvas.before:
            Color:
                rgb: 0.6, 0.6, 0.6
            Rectangle:
                pos: self.pos
                size: self.size
    BoxLayout:
        id: southPart
        orientation: "horizontal"
        size_hint: (.6923, .1538)
        pos_hint: {'x': .1538, 'y': 0}
        canvas.before:
            Color:
                rgb: 0.7, 0.7, 0.7
            Rectangle:
                pos: self.pos
                size: self.size
    BoxLayout:
        id: westPart
        orientation: "vertical"
        size_hint: (.1538, .6923)
        pos_hint: {'x': 0, 'y': .1538}
        spacing: 1
        canvas.before:
            Color:
                rgb: 0, 0, 0
            Rectangle:
                pos: self.pos
                size: self.size
    BoxLayout:
        id: eastPart
        orientation: "vertical"
        size_hint: (.1538, .6923)
        pos_hint: {'x': .8462, 'y': .1538}
        canvas.before:
            Color:
                rgb: 0.5, 0.5, 0.5
            Rectangle:
                pos: self.pos
                size: self.size

<HorizontalCityField>
    orientation: "horizontal"
    cityName: cityName
    value: value
    BoxLayout:
        orientation: "vertical"
        canvas.before:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size
        Label:
            id: cityName
            color: 0, 0, 0, 1
        Label:
            id: value
            color: 0, 0, 0, 1
    GridLayout:
        id: colorArea
        rows: 5
        cols: 1
        size_hint: (None, 1)
        width: 10
        row_default_height: 20
        canvas.before:
            Color:
                rgb: 1, 0, 0
            Rectangle:
                pos: self.pos
                size: self.size

<SingleRoomScreen>:
    chatController: chatContainer
    singleRoomGameWidget: singleRoomGameWidget
    roomName: roomName
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            size_hint: (1, None)
            height: 30
            orientation: "horizontal"
            Label:
                id: roomName
                text: "Room Name"
            Button:
                size_hint: (None, 1)
                width: 100
                text: "Quit"
                color: 1, 1, 1, 1
                background_color: [0.8, 0, 0, 1]
                on_press: root.quitRoom()
        BoxLayout:
            orientation: "horizontal"
            SingleRoomGameWidget:
                id: singleRoomGameWidget
            ChatController:
                id: chatContainer
                msgType: "ROOM"

