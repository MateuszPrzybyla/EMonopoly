<JoinServerScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            orientation: "vertical"
            size_hint: (None, None)
            pos_hint: { 'center_x' : 0.5 }
            width: 400
            spacing: 10
            Label:
                text: "Type your nickname"
                height: 25
                size_hint: (1, None)
            BoxLayout:
                orientation: "vertical"
                size_hint: (1, None)
                height: 100
                spacing: 10
                TextInput:
                    id: nickInput
                    multiline: False
                    font_size: '20dp'
                    height: 40
                    size_hint: (1, None)
                Label:
                    id: errorLabel
                    text: ""
                    height: 25
                    size_hint: (1, None)
                    color: 1, 0, 0, 1
            Button:
                text: "Connect with game room"
                size_hint: (1, None)
                height: 40
                on_press: root.joinServer(nickInput.text)

<GameRoomScreen>:
    BoxLayout:
        orientation: "horizontal"
        BoxLayout:
            orientation: "vertical"
            size_hint: (.6, 1)
            canvas:
                Color:
                    rgb: 1, 0.7, 0.7
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                text: "Rooms area"
                color: 0, 0, 0, 1
        BoxLayout:
            orientation: "vertical"
            size_hint: (.4, 1)
            ScrollView:
                size_hint: (1, 0.7)
                canvas:
                    Color:
                        rgb: 1, 0, 0
                    Rectangle:
                        pos: self.pos
                        size: self.size
            TextInput:
                id: chatMsg
                multiline: True
                font_size: '20dp'
                size_hint: (1, 0.3)
            Button:
                text: "Send"
                size_hint: (1, None)
                height: 40
                on_press: root.sendServerChatMsg(chatMsg.text)
